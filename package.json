{
  "name": "TechMeetingServer",
  "version": "1.0.1",
  "description": "Signaling server for tech meeting with mediasoup",
  "main": "index.ts",
  "dependencies": {
    "axios": "^1.6.8",
    "cors": "^2.8.5",
    "dd-trace": "^5.19.0",
    "debug": "^4.3.4",
    "express": "^4.18.2",
    "googleapis": "^132.0.0",
    "mediasoup": "3.18.1",
    "shelljs": "^0.8.5",
    "ts-node": ">10.8.1",
    "typescript": ">4.7.3",
    "ws": ">8.8.0",
    "wscat": "^5.2.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.17",
    "@types/node": ">17.0.43",
    "@types/ws": ">8.5.3",
    "ts-node-dev": "^2.0.0"
  },
  "scripts": {
    "build": "npx tsc",
    "main": "ts-node-dev --respawn  --inspect=8228 -- src/main.ts",
    "media": "export NODE_TLS_REJECT_UNAUTHORIZED=0;ts-node-dev --respawn --inspect=8229 -- src/media.ts",
    "wscat": "export NODE_TLS_REJECT_UNAUTHORIZED=0;wscat -c wss://localhost:3000",
    "cleanup-rooms": "ts-node src/scripts/cleanupRooms.ts"
  }
}
